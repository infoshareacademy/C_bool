@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potwierdzenie rejestracji";
}
<section class="vh-lg-100 mt-5 mt-lg-0 bg-soft d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6 d-flex align-items-center justify-content-center">
                <div class="bg-white shadow border-0 rounded border-light p-4 p-lg-5 w-100 fmxw-500">
                    <div class="text-center text-md-center mb-4 mt-md-0">
                        <h1 class="mb-0 h3">Jeszcze tylko chwila...</h1>
                    </div>
                    @{
                        if (@Model.DisplayConfirmAccountLink)
                        {
                            <p>
                                Nie skonfigurowaliśmy maila w projekcie i teraz musisz sobie kliknąć w link xD:
                            </p>
                            <br/>
                            <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-primary btn-lg">Kliknij aby potwierdzić rejestrację</a>
                        }
                        else
                        {
                            <p>
                                Sprawdź swojego maila. Czeka tam wiadomość z potwierdzeniem rejestracji.
                            </p>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
