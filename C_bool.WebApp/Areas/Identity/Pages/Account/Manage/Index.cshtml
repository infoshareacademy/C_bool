@page
@using C_bool.WebApp.Helpers
@model IndexModel
@{
    ViewData["Title"] = "Mój profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username">Nazwa użytkownika</label>
                <input type="text" asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label">Płeć</label>
                <select asp-for="Gender" asp-items="SelectListItems.GenderList" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Points">Zdobyte punkty</label>
                <input type="text" asp-for="Points" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="CreatedOn">Data utworzenia</label>
                <input type="date" asp-for="CreatedOn" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="IsActive">Status</label>
                <div class="form-check">
                    @if (Model.IsActive)
                    {
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsActive" disabled />Aktywny

                        </label>
                    }
                    else
                    {
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsActive" disabled />Nieaktywny

                        </label>
                    }
                </div>
            </div>
            <br />
            <button id="update-profile-button" type="submit" class="btn btn-primary">Zapisz</button>
        </form>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-4">
        <div class="card shadow border-0 text-center p-0">
            @if (Model.Photo is not null)
            {
                <img src="data:image;base64,@Html.Raw(Model.Photo)" class="rounded mx-auto mb-4" alt="User photo">
            }
            else
            {
                <img src="/img/onion_man.jpg" class="rounded mx-auto mb-4" alt="Default user photo">
            }
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}