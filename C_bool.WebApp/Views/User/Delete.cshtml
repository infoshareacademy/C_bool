@model C_bool.BLL.DAL.Entities.User

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń</h1>

<h3>Czy na pewno chcesz usunąć tego użytkownika?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Id"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="UserName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Gender"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Gender
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Email"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="IsActive"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.IsActive
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="CreatedOn"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedOn
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Points"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Points
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy użytkowników</a>
    </form>
</div>
