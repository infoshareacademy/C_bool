@using System.Linq
@using C_bool.BLL.Enums
@model IEnumerable<C_bool.BLL.DAL.Entities.User>

@{
    ViewData["Title"] = "Lista użytkowników";
}

<h1>Lista użytkowników</h1>

<p>
    <a asp-action="Create">Dodaj nowego użytkownika</a>
</p>

<div class="container">
    <form asp-action="SearchUsers">
        <table class="table">
            <tr>
                <td>
                    <div class="form-group">
                        <label class="control-label small">Nazwa:</label>
                        <input class="form-control small" type="text" name="name" value="" disabled placeholder="@ViewBag.Name" />
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label class="control-label small">Email:</label>
                        <input class="form-control small" type="text" name="email" value="" disabled placeholder="@ViewBag.Email" />
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label class="control-label small">Płeć:</label>
                        <input class="form-control small" name="gender" value="" disabled placeholder="@ViewBag.Gender"/>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label class="control-label small">Aktywny:</label>
                        <input class="form-control small" name="isActive" value="" disabled placeholder="@ViewBag.IsActive" />
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label class="control-label small">Sortuj punkty</label>
                        <input class="form-control small" name="isDescending" value="" disabled placeholder="@ViewBag.IsDescending" />
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <input type="submit" value="Usuń filtry" class="btn btn-primary" />
                    </div>
                </td>
            </tr>
        </table>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="First().Name"></label>
            </th>
            <th>
                <label asp-for="First().Email"></label>
            </th>
            <th>
                <label asp-for="First().Gender"></label>
            </th>
            <th>
                <label asp-for="First().IsActive"></label>
            </th>
            <th>
                <label asp-for="First().Points"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Gender
                </td>
                <td>
                    @item.IsActive
                </td>
                <td>
                    @item.Points
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Pokaż szczegóły</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
