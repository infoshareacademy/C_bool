@model C_bool.WebApp.Models.GameTask.GameTaskEditModel

<div class="card card-body border-0 shadow mb-4">
    <h2 class="h5 mb-4">Ustawienia zadania <b>"Wpisz hasło"</b></h2>
    <div class="row align-items-center">
        <div class="form-group">
            <label asp-for="TextCriterion" class="control-label"></label>
            <div class="input-group mb-3">
                <input asp-for="TextCriterion" class="form-control" />
                <button type="button" class="btn btn-outline-secondary" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="top" data-bs-content="Tutaj wpisz rozwiązanie swojego zadania, może to być np. hasło, bądź napis jaki napotka uczestnik we wskazanym miejscu. Pamiętaj, aby w opisie zadania jasno określić wskazówki, tak aby użytkownik miał szansę zaliczyć zadanie">
                    Pomocy?
                </button>
            </div>
            <span asp-validation-for="TextCriterion" class="text-danger cb-alert"></span>
        </div>
    </div>
</div>